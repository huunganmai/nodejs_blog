<div class="mt-4">
    <h2>Dang khoa hoc</h2>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Mô tả khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" placeholder="">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <textarea type="text" class="form-control" id="description" name="description" placeholder="">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId" placeholder="">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level" placeholder="">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>